// OK: quicksort

extern void println( int[] string );

void sort( int[] a ){
  qsort( a, 0, a.length-1 );
}

void qsort( int[] a, int lo, int hi ){
  int i = lo;
  int j = hi;
  int pivot = a[lo + (hi-lo) / 2];

  // partition around the pivot
  while( i <= j ){
    while( a[i] < pivot ){
      i = i + 1;
    }
    while( a[j] > pivot ){
      j = j - 1;
    }
    if( i <= j ){
      int t = a[i];
      a[i] = a[j];
      a[j] = t;
    }
  }

  if( lo < j )
    qsort( a, lo, j );
  if( i < hi )
    qsort( a, i, hi );
}

void main(){
  int[] s = "hello";
  sort( s );
  println( s );
}
